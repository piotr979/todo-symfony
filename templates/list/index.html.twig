{% extends 'base.html.twig' %}

{% block body %}
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
		<div class="container-fluid">
			<a class="navbar-brand mb-0 h1" href="{{ path('list.showAll') }}">TODO</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li
						class="nav-item">

						{# IF USER IS LOGGED IN LOGOUT IF LOGGED OUT LOGIN #}
						<a class="nav-link active" aria-current="page" href="#">Login</a>
					</li>


				</ul>
				<form class="d-flex">
					<input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
					<button class="btn btn-outline-success" type="submit">Search</button>
				</form>
			</div>
		</div>
	</nav>
	<div class="table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">Done?</th>
					<th scope="col">Task</th>
					<th class="importance" scope="col">Importance</th>
					<th scope="col">Options</th>
				</tr>
			</thead>
			<tbody>
				{% for task in tasks %}
					<tr>
						<td class="align-it"><input type="checkbox" disabled {% if task.done == true %} checked="checked" {% endif %}>
						</td>
						<td class="align-it 
                        {% if task.done == true %}
                            {{ 'text-secondary' }}
                        {% endif %}
                        ">{{ task.name }}</td>

						{# switch color block depending on task importance #}
						<td class="importance align-it">
							<div class="color-block
								                    {% if task.importance == " 0" %}
								                        {{ 'bg-danger' }}
								                    {% elseif task.importance == " 1" %}
								                        {{ 'bg-warning' }}
								                    {% elseif task.importance == " 2" %}
								                        {{ 'bg-primary' }}
								                    {% elseif task.importance == " 3" %}
								                        {{ 'bg-secondary' }}
								                    {% endif %}
								                    ">&nbsp;</div>
						</td>

						<td>
							<a href="{{ path('list.edit', { id: task.id }) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
							<a href="{{ path('list.delete') }}" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
        <section class="buttons-list">
            <a href="{{ path('list.new-task')}}" class="btn btn-primary">Add new</a>
        </section>
{% endblock %}

